<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <corners
                android:radius="10dp"/>
            <gradient
                android:angle="135"
                android:endColor="@color/purple_500_darker"
                android:startColor="@color/purple_700_darker"
                android:type="linear" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:angle="135"
                android:endColor="@color/purple_500"
                android:startColor="@color/purple_700"
                android:type="linear" />
            <corners
                android:radius="10dp"/>
        </shape>
    </item>
</selector>